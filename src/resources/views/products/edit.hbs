<div class="mt-4">
    <form method="POST" action="/admin/products/{{product._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" class="form-control" value="{{product.name}}" id="name" placeholder="Enter name">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea name="description" class="form-control" id="description" placeholder="Enter description">{{product.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video Id</label>
            <input type="text" name="videoId" class="form-control"value="{{product.videoId}}" id="videoId" placeholder="Enter video id">
        </div>
        <button type="submit" class="btn btn-primary mb-2">Cập nhật</button>
    </form>
</div>