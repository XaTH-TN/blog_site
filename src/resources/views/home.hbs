<div class="row mt-4">
  <div class="col-sm-12">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
            <img class="d-block w-100" src="/img/bg-img/breadcumb1.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
            <img class="d-block w-100" src="/img/bg-img/breadcumb2.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
            <img class="d-block w-100" src="/img/bg-img/breadcumb3.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
        </div>
      {{!-- <img src="/img/bg-img/breadcumb3.jpg" class="img-fluid" alt="Responsive image"> --}}
  </div>
</div>

<div class="dropdown-divider mt-4"></div>

<div class="row mt-4 mb-4">
    {{!-- left: tin xem nhieu --}}
    <div class="col-sm-3">
        <table class="table table-striped">
            <thead>
                <tr>
                <th scope="col">Món phổ biến</th>
                </tr>
            </thead>
            <tbody>
                {{#each postMore}}
                    <tr>
                        <th scope="row">
                            <a href="/news/{{this.slug}}">
                                {{this.name}}
                            </a>
                        </th>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    {{!-- center: tin moi dang --}}
    <div class="col-sm-6">
        <div class="row">
            <div class="col-sm">
                <div class="card" style="width: 100%;">
                    <a href="#">
                        <img class="card-img-top" src="{{postTop.imageUrl}}" alt="Card image cap">
                    </a>
                    <div class="card-body">
                        <a href="#">
                            {{postTop.name}}
                        </a>
                    </div>                              
                </div>
            </div>
        </div>
        <div class="dropdown-divider"></div>
        <div class="row">
            {{#each postNew}}
                <div class="col-sm">
                    <div class="card" style="width: 100%;">
                        <a href="/news/{{this.slug}}">
                            <img class="card-img-top" src="{{this.imageUrl}}" alt="Card image cap">
                        </a>
                        <div class="card-body">
                            <a href="/news/{{this.slug}}">
                                <p class="card-text">{{this.name}}</p>
                            </a>
                        </div>                              
                    </div>
                </div>
            {{/each}}
            
        </div>
    </div>

    {{!-- right: quang cao --}}
    <div class="col-sm-3">quang cao</div>
</div>

<div class="dropdown-divider mt-4 mb-4"></div>

<div class="card">
  <h5 class="card-header">Du lịch</h5>
  <div class="card-body">
    <h5 class="card-title">Special title treatment</h5>
    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
    <a href="#" class="btn btn-primary">Go somewhere</a>
  </div>
</div>
